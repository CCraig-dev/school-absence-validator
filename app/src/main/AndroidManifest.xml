<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group5.caniskipclass" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddCourseActivity"
            android:label="@string/title_activity_crud_course"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".CourseDetailActivity"
            android:label="@string/title_activity_course_detail"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group5.caniskipclass.MainActivity" />
        </activity>
    </application>

</manifest>
